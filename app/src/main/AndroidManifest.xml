<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ovidiu.easyworkersv01">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_android"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_android"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EmployeeLogin"
            android:label="@string/title_activity_employee_login" />
        <activity
            android:name=".EmployeeRegister"
            android:label="@string/title_activity_employee_register" />
        <activity
            android:name=".CompanyRegister"
            android:label="@string/title_activity_company_register" />
        <activity
            android:name=".AddJobActivity"
            android:label="Add Jobs" />
        <activity
            android:name=".CompanyProfile"
            android:label="@string/title_activity_company_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CompanyTabs"
            android:label="@string/title_activity_company_tabs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EmployeeMain"
            android:label="@string/title_activity_employee_main"
            android:parentActivityName=".EmployeeLogin"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ovidiu.easyworkersv01.EmployeeLogin" />
        </activity>
        <activity
            android:name=".EmployeeProfile"
            android:label="@string/title_activity_employee_profile"
            android:parentActivityName=".EmployeeMain"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ovidiu.easyworkersv01.EmployeeMain" />
        </activity>
        <activity android:name=".ApplicationsTab" />
        <activity android:name=".PostedJobsTabs" />
        <activity
            android:name=".EmployeeMain2"
            android:label="@string/title_activity_employee_main2"
            android:parentActivityName=".EmployeeLogin"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ovidiu.easyworkersv01.EmployeeLogin" />
        </activity>
        <activity
            android:name=".SearchedJob"
            android:label="@string/title_activity_searched_job"
            android:parentActivityName=".EmployeeMain"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ovidiu.easyworkersv01.EmployeeMain" />
        </activity>
        <activity
            android:name=".EmployeeJobs"
            android:label="@string/title_activity_employee_jobs"
            android:parentActivityName=".EmployeeMain"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ovidiu.easyworkersv01.EmployeeMain" />
        </activity>
    </application>

</manifest>