<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ovidiu.easyworkersv01">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EmployeeLogin"
            android:label="@string/title_activity_employee_login" />
        <activity
            android:name=".EmployeeRegister"
            android:label="@string/title_activity_employee_register" />
        <activity android:name=".EmployeeProfile" />
        <activity
            android:name=".EmployeeProfile1"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CompanyRegister"
            android:label="@string/title_activity_company_register" />
        <activity
            android:name=".CompanyProfile"
            android:label="@string/title_activity_company_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CompanyTabs"
            android:label="@string/title_activity_company_tabs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddJobActivity"
            android:label="@string/title_activity_add_job"></activity>
    </application>

</manifest>